<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.submission1dicoding">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Room.MyApp">
        <meta-data android:name="DATABASE" android:value="catalog.db"/>
        <meta-data android:name="VERSION" android:value="2.1"/>
        <meta-data android:name="QUERY_LOG" android:value="true"/>
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.submission1dicoding"/>

        <activity android:name=".fragment.FavTVFragment"></activity>
        <activity android:name=".fragment.FavMovieFragment" />
        <activity android:name=".view.FavoriteActivity" />
        <activity
            android:name=".view.DetailTVActivity"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.submission1dicoding.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.DetailMoviesActivity"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.submission1dicoding.view.MainActivity" />
        </activity>
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>